@using FormCraft.WebApp.ViewModels.FormViewModels

@model List<FormResponseViewModel>

<h2 class="d-flex justify-content-center">Form List</h2>

<form class="input-group d-flex mb-3 w-auto" id="search-form-form">
    <div class="input-group">



        <span class="text-black text-opacity-50 d-flex align-items-center m-2">Sort</span>
        <div class="dropdown">
            <select id="orderInput" class="form-select" name="order">
                <option value=1>By status</option>
                <option value=2>By type</option>
                <option value=3>By Label ascending</option>
                <option value=4>By Label descending</option>
                <option value=5>By date ascending</option>
                <option value=6>By date descending</option>
            </select>
        </div>


        <input id="labelInput" class="form-control w-auto" type="search" name="search" placeholder="Search...">
        <input class="btn btn-outline-secondary" type="button" value="Search" id="searchBtn" />



        <div class="d-flex gap-2 form-control justify-content-center check-box-container">
            @foreach (FormTypeEnum formType in Enum.GetValues<FormTypeEnum>())
            {

                <div class="form-check">
                    <div class="item">
                        <input class="form-check-input" type="checkbox" name="IsFormTypePicked" value="@formType" data-type="@formType" id="formTypeInput-@formType">
                        <label class="form-check-label" for="flexCheckDefault">
                            @formType
                        </label>
                    </div>
                </div>
            }
        </div>

        <div class="d-flex gap-2 form-control justify-content-center check-box-container">
            @foreach (StatusEnum formStatus in Enum.GetValues<StatusEnum>())
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="IsStatusEnumPicked" value="@formStatus" data-status="@formStatus" id="statusInput-@formStatus">
                    <label class="form-check-label" for="flexCheckDefault">
                        @formStatus
                    </label>
                </div>
            }
        </div>

    </div>
</form>

<table class="table table-light table-hover">
    <thead>
        <tr>
            <th>CreatorName</th>
            <th>Label</th>
            <th>FormTypeId</th>
            <th>StatusId</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody id="list-container">
        @foreach (var form in Model)
        {
            <tr id="row-@form.Id">
                <td>@form.CreatorName</td>
                <td>@form.Label</td>
                <td>@form.FormTypeId</td>
                <td>
                    @if (form.StatusId == StatusEnum.InProgress)
                    {
                        <div class="d-flex justify-content-center bg-warning text-primary-emphasis bg-primary-subtle border border-primary-subtle rounded-3">
                            @form.StatusId
                        </div>
                    }
                    @if (form.StatusId == StatusEnum.Validated)
                    {
                        <div class="d-flex justify-content-center bg-success text-primary-emphasis bg-primary-subtle border border-primary-subtle rounded-3">
                            @form.StatusId
                        </div>
                    }

                    @if (form.StatusId == StatusEnum.Closed)
                    {
                        <div class="d-flex justify-content-center bg-black bg-opacity-50 text-primary-emphasis bg-primary-subtle border border-primary-subtle rounded-3">
                            @form.StatusId
                        </div>
                    }
                </td>
                <td>
                    <a asp-controller="Form" asp-action="Details" asp-route-id="@form.Id" class="btn btn-outline-success"> Go to</a>
                </td>
                <td>
                    @if (form.StatusId == StatusEnum.InProgress)
                    {
                        <a class="btn btn-danger delete" data-form-id="@form.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script src="~/js/FormList.js" type="text/javascript"></script>
}
